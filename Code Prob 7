// Create a program that will generate the sum of all whole numbers starting from 1 up to a given number.

#include <iostream>
#include <conio.h>

using namespace std;

int main ()
{
	int num, equal;
	num =1;
	
	while ( num > 0)
	{
		equal = 0;
		cout <<  " Enter a number you desire: "; cin >> num;
		
		if ( num <= 0)
		{
			cout << " Thank you!! " << endl;
		}
		else
		{
			for (int a = 1 ; a <= num ; a+=1 )
		{
				equal += a;
		}
		cout << " The summation of the numbers from 1 to "<< num <<"th term is: " << equal << endl;
		}
	}
	
	_getch();
  return 0;
}
